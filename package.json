{
  "name": "top-companies",
  "version": "1.0.0",
  "description": "Top companies API",
  "main": "index.js",
  "engines": {
    "node": "14.5.0"
  },
  "scripts": {
    "test": "env NODE_ENV=testing mocha ./test/**/*.js --require @babel/register",
    "build": "babel ./ --out-dir build/ --ignore ./node_modules/,./.babelrc,./package.json,./npm-debug.log",
    "dev-start": "env NODE_ENV=development babel-watch index.js",
    "start": "node /app/build/index.js",
    "heroku-postbuild": "npm install",
    "lint": "./node_modules/.bin/eslint src/  --fix",
    "coveralls": "test --coverage && cat ./tests/intergration/coverage/lcov.info | coveralls"
  },
  "author": "Bernard Namangala",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.27.0",
    "nock": "^13.0.4",
    "nyc": "^15.1.0",
    "pg": "^8.3.0",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/register": "^7.10.5",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3"
  }
}
